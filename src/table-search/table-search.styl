.table-search
  flex 0 0 auto
  height 35px
  width 35px
  margin-right 8px
  position relative
  border 1px solid transparent
  border-radius 4px
  transition width 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms
  overflow hidden
  align-items center
  justify-content flex-start

  input
  .table-search-clear
    opacity 0

  &:hover
    background white
    border 1px solid rgba(0, 0, 0, 0.23)

  &.-open
    display flex
    background white
    border 1px solid rgba(0, 0, 0, 0.23)
    width 250px

    .table-search-icon
      display none

    input
    .table-search-clear
      opacity 1

.table-search-icon
  display flex
  align-items center
  justify-content center
  width 35px
  height 35px
  cursor pointer
  flex 0 0 35px

.table-search-input
  height 35px
  width 200px
  border-radius 4px
  padding-left 16px
  font-size 14px
  flex 1
  border 0

.table-search-clear
  flex 0 0 auto
  cursor pointer
  padding 0 4px
  display flex
  align-items center
  justify-content center
  height 35px
  &:hover
    fill red