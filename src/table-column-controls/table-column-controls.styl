.table-column-controls
  left 50px
  width 100px

  .section-header
    position sticky
    top 0px
    background white
    z-index 2
    padding-left 14px
    padding-right 14px
    color rgb(55, 53, 47)
    display flex
    font-weight 500
    line-height 120%
    user-select none
    height 19px
    justify-content space-between
    background darken(white, 4%)

    .action
      transition background 20ms ease-in 0s
      display inline-flex
      align-items center
      font-size 12px
      padding 2px 6px
      color rgb(35, 131, 226)
      margin-left auto

  .column-drag-handle
    cursor ns-resize

.selected-columns-container
  padding 8px

.column-controls-body
  overflow-y scroll
  height 100%

.rank-aggregation-controls-visible .table-column-controls
  left 130px

.table-column-controls-load-all-columns
  margin 8px
  padding 8px 16px
  border-radius 4px
  background rgba(0, 0, 0, 0.05)
  cursor pointer
  border 1px solid transparent
  display flex
  align-items center
  justify-content center
  &:hover
    border 1px solid rgba(0, 0, 0, 0.23)

.column-category-container
  padding 8px
  margin-bottom 8px
  display flex
  flex-direction column
  overflow-y auto