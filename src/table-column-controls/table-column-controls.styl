.MuiTreeItem-label
  text-transform capitalize

.MuiTreeItem-root
  text-select none

.table-column-controls
  overflow hidden
  overflow-y scroll
  position fixed
  top 50%
  left 50%
  transform translate(-50%, -50%)
  min-width fit-content
  height 90%
  background white
  border-radius 4px

  .filter-input
    padding 12px
    position sticky
    top 0
    background white
    z-index 1

  .section-header
    position sticky
    top 64px
    background white
    z-index 1
    padding-left 14px
    padding-right 14px
    margin-top 6px
    margin-bottom 8px
    color rgb(55, 53, 47)
    display flex
    font-weight 500
    line-height 120%
    user-select none
    height 19px
    justify-content space-between
    background darken(white, 4%)

    .action
      transition background 20ms ease-in 0s
      display inline-flex
      align-items center
      font-size 12px
      padding 2px 6px
      color rgb(35, 131, 226)
      margin-left auto

  .column-item
    display flex
    align-items center
    user-select none
    border-radius 3px
    font-size 14px
    min-height 28px
    cursor pointer
    margin-bottom 1px
    padding-right 18px

    &.prefix
      background darken(white, 4%)

    &.shown
      background rgba(21, 255, 0, 0.334)
    
    .column-action
      margin-right 14px

    .column-name
      flex 1
      font-family "Roboto","Helvetica","Arial",sans-serif
      font-weight 400
      font-size 1rem
      line-height 1.5
      letter-spacing 0.00938em

    .column-category
      font-family IBM Plex Mono,monospace

    .column-data-type
      display flex
      align-items center
      justify-content center
      margin-left 10px
      margin-right 4px

      svg
        width 16px
        height 16px

    + .column-item
      margin-top 4px

@media (min-width 600px)
  .table-column-controls
    width 40%

@media (pointer: fine)
  .MuiTreeItem-root[aria-selected="true"]
    background darken(white, 4%)
  .table-column-controls
    .column-item
      .column-action
        opacity 0
        transition opacity 20ms ease-in 0s

      &:hover
        background rgb(233, 233, 233)

        .column-action
          opacity 1
          transition opacity 20ms ease-in 0s
