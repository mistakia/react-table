.table-expanding-control-button
  padding 4px
  margin-bottom 8px
  border none
  border-radius 4px
  cursor pointer
  display flex
  align-items center
  justify-content flex-start
  &:hover
    color #4A90E2

.table-expanding-control-input-container
  border-bottom 1px solid rgba(0, 0, 0, 0.23)
  padding 0 16px

.table-expanding-control-container
  opacity 1
  pointer-events all
  z-index 3
  position absolute
  top 4px
  height 32px
  border-radius 8px
  display flex
  flex-direction column
  align-items stretch
  transition transform 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms, width 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms, height 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms, box-shadow 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms
  border 1px solid transparent
  &:hover
    border 1px solid rgba(0, 0, 0, 0.23)
    box-shadow #D0D0D0 4px 4px 0px 0px
    background-color white

  &.-open
  &.-closing
    background-color white
    z-index 4
    border 1px solid rgba(0, 0, 0, 0.23)

  &.-open
    box-shadow #D0D0D0 4px 4px 0px 0px
    min-width 450px
    width 60vw
    height 80vh // Adjust height as needed for full visibility

  .section-header
    position sticky
    top 0px
    background white
    z-index 2
    padding-left 14px
    color rgb(55, 53, 47)
    display flex
    font-weight 500
    line-height 120%
    user-select none
    height fit-content
    justify-content space-between
    background darken(white, 4%)

    .action
      transition background 20ms ease-in 0s
      display inline-flex
      align-items center
      font-size 12px
      padding 2px 6px
      color rgb(35, 131, 226)
      margin-left auto
      border-left 1px solid rgba(0, 0, 0, 0.23)
      cursor pointer
      &:hover
        background #f0f0f0

.table-control-container-state-buttons
  position absolute
  top 8px
  right 8px
  display flex
  justify-content space-between

.controls-discard
  background #f0f0f0
  border 1px solid $borderColor
  margin-right 8px

.controls-apply
  background lighten(#388E3C, 20%)
  border 1px solid #388E3C
  color white

.column-params-container
  width 100%
  display flex
  flex-wrap wrap
  padding 0 8px

.column-param-group
  display flex
  flex-wrap wrap
  width 100%
  padding-top 16px

.column-param-group-title
  width 100%
  padding 8px
  border-top 2px solid rgba(0, 0, 0, 0.23)
  text-transform uppercase
  color rgba(0, 0, 0, 0.54)
  font-size 12px
  font-weight 500
  line-height 120%

@media (max-width: 768px)
  .table-expanding-control-container
    &.-open
      width 90vw
      height 90vh
      left 5vw
      right 5vw