.table-expanding-control-button
  padding 4px
  border none
  border-radius 4px
  cursor pointer
  display flex
  align-items center
  justify-content flex-start
  &:hover
    color #4A90E2

.table-expanding-control-input-container
  border-bottom 1px solid rgba(0, 0, 0, 0.23)
  padding 12px

.table-expanding-control-container
  opacity 1
  pointer-events all
  z-index 3
  position absolute
  top 4px
  height 32px
  border-radius 8px
  display flex
  flex-direction column
  align-items stretch
  transform translateX(-50%) scale(1)
  transition transform 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms, width 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms, height 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms, box-shadow 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms
  border 1px solid transparent
  &:hover
    border 1px solid rgba(0, 0, 0, 0.23)
    box-shadow #D0D0D0 4px 4px 0px 0px
    background-color white

  &.-open
  &.-closing
    background-color white
    z-index 4
    border 1px solid rgba(0, 0, 0, 0.23)

  &.-open
    box-shadow #D0D0D0 4px 4px 0px 0px
    min-width 450px
    width 40vw
    height 80vh // Adjust height as needed for full visibility

.table-control-container-state-buttons
  position absolute
  top 8px
  right 8px
  display flex
  justify-content space-between

  div
    padding 0.25rem 0.5rem
    border-radius 3px
    display flex
    justify-content center
    align-items center
    font-weight 600
    cursor pointer
    &:hover
      box-shadow #D0D0D0 4px 4px 0px 0px

.controls-discard
  background #f0f0f0
  border 1px solid $borderColor
  margin-right 8px

.controls-apply
  background lighten(#388E3C, 20%)
  border 1px solid #388E3C
  color white

@media (max-width: 768px)
  .table-expanding-control-container
    &.-open
      width 90vw
      height 90vh
      left 5vw
      right 5vw