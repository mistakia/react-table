.table-filter-modal.MuiModal-root
  z-index 4

.table-filter-modal-content
  overflow hidden
  overflow-y scroll
  position fixed
  top 50%
  left 50%
  transform translate(-50%, -50%)
  width 66%
  max-width 600px
  height 90%
  background white
  border-radius 4px
  padding 10px 0

  .filter-item
    display flex
    padding 4px

    &.visible
      background-color #bbd9fb

  .filter-item-right 
    display flex
    align-items center
    justify-content center

  .filter-item-left
    flex 1
    display flex

    .MuiInputBase-root
    .MuiFormControl-root
      width 100%

  .filter-item-left-column
    flex 2
    padding-left 10px

  .filter-item-left-operator
    flex 1
    padding-left 10px

  .filter-item-left-value
    flex 2
    padding-left 10px

.misc-menu.base-Popper-root
  min-width 60px
  padding 4px

.misc-menu-item
  display flex
  align-items center
  padding 0 10px
  cursor pointer
  min-height 28px

  .MuiSvgIcon-root
    width 16px
    height 16px

  &:hover
    background #f5f5f5

  .misc-menu-item-icon
    margin-right 10px

  .misc-menu-item-text
    font-size 14px

.table-filter-add-content
  display flex

.table-filter-add-button
  flex 1
  display flex
  align-items center
  justify-content center
  margin 10px 12px
  padding 10px
  cursor pointer
  border-radius 4px
  font-size 12px
  background #fafafa

  .MuiSvgIcon-root
    width 18px
    height 18px
    margin-right 8px

  &:hover
    background #e5e5e5