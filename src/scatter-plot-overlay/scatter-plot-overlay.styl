.scatter-plot-overlay
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background-color rgba(0, 0, 0, 0.5)
  display flex
  justify-content center
  align-items flex-start
  padding 20px 0
  z-index 2000
  overflow-y auto

  .scatter-plot-container
    background-color white
    padding 20px
    border-radius 8px
    width 80%
    height fit-content
    position relative

    .highcharts-data-label
      z-index 1

    .highcharts-tooltip
      z-index 2

    .close-button
      position sticky
      top 10px
      right 10px
      z-index 1

.plot-controls
  margin-top 1rem
  padding 0.5rem
  border-radius 4px

  .regression-toggle
    display flex
    align-items center
    gap 8px
    border 1px solid transparent
    border-radius 8px
    width max-content
    padding 8px 16px
    background-color white
    cursor pointer
    transition transform 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms,
              box-shadow 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms

    &:hover
      border 1px solid rgba(0, 0, 0, 0.23)
      box-shadow $box_shadow

.regression-stats
  margin-top 1rem
  padding 1rem
  background-color #f8f8f8
  border-radius 4px

  h4
    margin-top 0
    margin-bottom 0.5rem

  div
    margin-bottom 0.25rem
