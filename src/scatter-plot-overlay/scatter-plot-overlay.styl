.scatter-plot-overlay
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background-color rgba(0, 0, 0, 0.5)
  display flex
  justify-content center
  align-items center
  z-index 2000

  .scatter-plot-container
    background-color white
    padding 20px
    border-radius 8px
    width 80%
    height fit-content
    position relative

    .highcharts-data-label
      z-index 1

    .highcharts-tooltip
      z-index 2

    .close-button
      position absolute
      top 10px
      right 10px
      z-index 1
