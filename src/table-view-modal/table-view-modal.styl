.table-view-modal.MuiModal-root
  z-index 10000

.table-view-modal-content
  overflow hidden
  overflow-y scroll
  position fixed
  top 50%
  left 50%
  transform translate(-50%, -50%)
  width 90vw
  max-width 600px
  height fit-content
  max-height 90%
  background white
  border-radius 4px
  padding 16px

.table-view-item-content-name
  font-size 14px
  font-weight 500

.table-view-item-content-description
  flex 1
  display flex
  padding-top 24px

  .MuiTextField-root 
    width 100%

.table-view-modal-actions
  display flex
  justify-content flex-end
  padding-top 16px

.table-view-add-button
  flex 1
  display flex
  align-items center
  justify-content center
  margin 10px 12px
  padding 10px
  cursor pointer
  border-radius 4px
  font-size 12px
  background #fafafa

  .MuiSvgIcon-root
    width 16px
    height 16px

  &:hover
    background #e5e5e5