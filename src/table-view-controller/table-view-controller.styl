.table-view-popper.MuiPopper-root
  width 300px

.table-view-list
  padding 8px
  height 100%
  overflow hidden
  overflow-y scroll

.table-view-item
  display flex
  cursor pointer
  padding 2px 8px
  border-radius 4px

  &:hover
    background-color rgba(0, 0, 0, 0.04)

.table-view-item-name
  font-size 14px
  line-height 24px
  color rgba(0, 0, 0, 0.87)

.table-view-item-description
  font-size 12px
  line-height 16px
  color rgba(0, 0, 0, 0.54)

.table-view-item-left
  flex 1

.table-view-item-right
  flex 0 0 40px
