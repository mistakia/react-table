.table-menu-button
  cursor pointer
  width 35px
  height 35px
  border-radius 5px
  display flex
  align-items center
  justify-content center
  border 1px solid transparent

  &:hover
    border 1px solid $borderColor
    background white

.table-menu
  position absolute
  left 16px
  top 40px
  z-index 1000
  width 200px
  border 1px solid $borderColor
  background-color #fff
  padding 6px 0
  border-radius 5px
  transform-origin 0 0
  transition opacity 255ms cubic-bezier(0.4, 0, 0.2, 1) 0ms, transform 80ms cubic-bezier(0.4, 0, 0.2, 1) 0ms
  transform scale(0)

  &.table-menu-open
    transform scale(1)

.table-menu-item
  transition background 20ms ease-in 0s
  cursor pointer
  width calc(100% - 8px)
  margin-left 4px
  margin-right 4px
  border-radius 4px
  color #37352B
  fill rgba(55, 53, 47, 0.85)
  display flex
  align-items center
  line-height 120%
  user-select none
  min-height 28px
  font-size 14px

  &:hover
    background rgba(55, 53, 47, 0.08)

.table-menu-item-icon
  display flex
  align-items center
  justify-content center
  margin-left 10px
  margin-right 4px

.table-menu-item-text
  margin-left 6px
  margin-right 6px
  min-width 0px
  flex 1 1 auto
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  display flex