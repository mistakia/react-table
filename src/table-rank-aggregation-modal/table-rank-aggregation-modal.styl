.table-rank-aggregation-modal.MuiModal-root
  z-index 4

.table-rank-aggregation-modal-content
  overflow hidden
  overflow-y scroll
  position fixed
  top 50%
  left 50%
  transform translate(-50%, -50%)
  width 66%
  max-width 600px
  height 90%
  background white
  border-radius 4px
  padding 10px 0

  .rank-item
    display flex
    padding 4px

  .rank-item-column
    flex 2
    padding-left 10px

  .rank-item-weight
    flex 1
    padding-left 10px

.table-rank-aggregation-modal-add-button
  flex 1
  display flex
  align-items center
  justify-content center
  margin 10px 12px
  padding 10px
  cursor pointer
  border-radius 4px
  font-size 12px
  background #fafafa

  .MuiSvgIcon-root
    width 16px
    height 16px

  &:hover
    background #e5e5e5